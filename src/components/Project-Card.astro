---

interface Props {
    title: string;
    href: string;
    description: string;
    img: string;
}
const { title, href, description, img } = Astro.props;
---
<div class="project-card">
    <a href={href}>
        <h1 class="project-title">{title}</h1>
        <img src={img} alt={title}/>
        <p>{description}</p>
    <a/>
</div>

<style>
    .project-card {
        width: 95%; 
        height: 225px;
        border: 1px solid rgb(255, 255, 255);
        border-radius: 5px;
        min-width: 200px;
        box-shadow: rgba(255, 255, 255, 0.15) 0px 2px 4px, rgba(255, 255, 255, 0.05) 0px 2px 4px;
        overflow: hidden; 
        word-wrap: break-word; 
        white-space: normal; 
        padding: 0 0.5rem;
        font-size: 1rem;
        color: aliceblue;
}

    .project-card:hover {
        border: 1px solid var(--purple-color);
        box-shadow: var(--purple-color) 0px 2px 4px, var(--purple-color) 0px 2px 4px;
        transition: 0.7s;
    }

    a {
        text-decoration: none;
    }

    p {
        text-align: center;
        text-wrap: wrap;
        overflow: hidden; 
        word-wrap: break-word;
        color: aliceblue;
        font-size: 1rem;
    }

    .project-title {
        color: aliceblue;
        font-size: 1rem;
        text-align: center;
        padding: 0rem 0.5rem;
        margin-top: 0.5rem;
    }

    img {
        width: 100%;
        height: 100%;
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
    }
</style>